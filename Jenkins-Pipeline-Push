pipeline { 
    agent {label 'linux'}
    environment{
        //user and token stored in jenkins cred manager as 'dockerhub' id
        DOCKERHUB_CREDENTIALS=credentials('dockerhub')
    }
    stages{
        stage('pull from git'){
            steps{
                deleteDir()
                sh 'git clone https://github.com/liranos86/docker-cicd.git'
            }
        }
        stage ('build & tag'){
            steps{
                sh "docker build -t liranos86/docker-cicd:${BUILD_NUMBER} ./docker-cicd"
            }
        }
        stage ('login') {
            steps{
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('push') {
            steps{
                sh "docker push liranos86/docker-cicd:${BUILD_NUMBER}"
            }
        }
    }

    post {
        always {
            sh 'docker logout'
        }
    }
}
